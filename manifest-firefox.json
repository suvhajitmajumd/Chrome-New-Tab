{
  "manifest_version": 2,
  "name": "Custom New Tab Dashboard",
  "version": "1.0",
  "description": "A beautiful new tab page with wallpapers, weather, calendar, and productivity tools",
  
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  
  "permissions": [
    "storage"
  ],
  
  "web_accessible_resources": [
    "wallpapers/*"
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "newtab-dashboard@example.com",
      "strict_min_version": "57.0"
    }
  }
}